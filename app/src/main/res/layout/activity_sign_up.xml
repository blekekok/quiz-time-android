<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="12dp"
    tools:context=".SignUpActivity">

    <ImageView
        android:id="@+id/ivRoundRectangle"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/round_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <!-- Sign Up Title -->
    <TextView
        android:id="@+id/tvSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="@id/ivRoundRectangle"
        android:layout_marginTop="180dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ID -->
    <TextView
        android:id="@+id/tvSignUpId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/tvSignUp"
        android:layout_marginTop="40dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edtSignUpId"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvSignUpId"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <!-- Email -->
    <TextView
        android:id="@+id/tvSignUpEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/edtSignUpId"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edtSignUpEmail"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/tvSignUpEmail"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <!-- Password -->
    <TextView
        android:id="@+id/tvSignUpPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/edtSignUpEmail"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edtSignUpPass"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@id/tvSignUpPass"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <!-- Confirm Password -->
    <TextView
        android:id="@+id/tvSignUpConfPass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintTop_toTopOf="@id/edtSignUpPass"
        android:layout_marginTop="50dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <EditText
        android:id="@+id/edtSignUpConfPass"
        android:layout_width="285dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        app:layout_constraintTop_toTopOf="@id/tvSignUpConfPass"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="@+id/ivRoundRectangle"
        android:layout_marginLeft="50dp"/>

    <!-- Button -->
    <Button
        android:id="@+id/btnSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:background="@color/teal_700"
        android:foregroundGravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="@id/ivRoundRectangle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="160dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
